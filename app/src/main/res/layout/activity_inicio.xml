<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio_sesion"
    tools:context=".inicio">

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="186dp"
        android:layout_height="46dp"
        android:layout_marginStart="221dp"
        android:layout_marginTop="669dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#282727"
        android:fontFamily="sans-serif"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="186dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="669dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#f7f9f9"
        android:fontFamily="sans-serif"
        android:text="Iniciar sesion"
        android:textColor="#000000"
        android:textStyle="bold"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="165dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="315dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pelota_basquet" />

    <TextView
        android:id="@+id/clubDeportivoTtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="428dp"
        android:layout_marginBottom="196dp"
        android:backgroundTint="#FF000080"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="16dp"
        android:singleLine="false"
        android:text="Club\nDeportivo"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>