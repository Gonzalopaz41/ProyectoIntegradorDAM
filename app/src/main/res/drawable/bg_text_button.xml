<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado (cuando el usuario lo toca) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Verde -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Estado por defecto (sin tocar) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Blanco -->
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#2196F3"/> <!-- Borde azul -->
        </shape>
    </item>
</selector>

